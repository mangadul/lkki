<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/konsultan1"
        android:hint="Pilih Konsultan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Spinner
        android:id="@+id/konsultan2"
        android:hint="Pilih Konsultan Pendamping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tgl_presentasi"
            android:inputType="none"
            android:textIsSelectable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:id="@+id/btn_datep"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/tgl_presentasi"
            android:layout_toRightOf="@+id/tgl_presentasi"
            android:layout_toEndOf="@+id/tgl_presentasi" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/jam_presentasi"
            android:inputType="none"
            android:textIsSelectable="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam"
            android:id="@+id/btn_timep"
            android:layout_toRightOf="@+id/jam_presentasi"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>